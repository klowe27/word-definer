<h2>All your words</h2>
Click on a word to visit that page!
<ul>
  <% @words.each do |word| %>
    <li><a href="word/<%= word.id %>"><%= word.name %></a></li>
    <ul>
    <% word.definitions.each_with_index do |definition, index| %>
      <li><strong>Definition <%= index +1 %>:</strong> <%= definition %></li>
    <% end %>
    </ul>
  <% end %>
</ul>

<a href="/sort_words"><button class="btn btn-primary">Sort A-Z</button></a>
<a href="/reset_words"><button class="btn btn-primary">Reset Sort</button></a>

<a href="/random_word"><button class="btn btn-primary">Random Word</button></a>

<a href="/"><button type="button" name="button" class="btn btn-primary">Return to Home</button></a>
